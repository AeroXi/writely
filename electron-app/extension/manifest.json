{
  "manifest_version": 2,
  "name": "Electron Wrapper",
  "version": "1.0.0",
  "description": "Wrap the chrome extension into an Electron app, support both mac and windows.",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Alt+W",
        "mac": "Option+W"
      }
    }
  }
}